<% @routine ||= Routine.new %>
<%= form_with model: @routine, html: { class: "max-w-lg" } do |form| %>
  <fieldset class="fieldset">
    <legend class="fieldset-legend">Nombre de la rutina</legend>
    <%= form.text_field :title, class: "input w-full", placeholder: "Tren superior" %>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Contexto</legend>
    <%= form.text_area :context, class: "textarea min-h-32 w-full", placeholder: "Quiero entrenar todo el tren superior con mi propio peso corporal." %>
  </fieldset>

  <%= form.submit "Crear rutina", class: "btn btn-primary btn-block mt-4" %>
<% end %>
